<Prefab>
	<Window>
		<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="ExecuteSelection" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" SuggestedHeight="37" Brush="Encyclopedia.ListButton" ListItemId="@Id">
			<!--IsHidden="@IsFiltered" ListItemId="@Id"-->
			<Children>

				<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="HorizontalLeftToRight">
					<Children>
						<!--Star if bookmarked-->
						<Widget IsVisible="@IsBookmarked" IsSelected="true" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="35" SuggestedHeight="35" HorizontalAlignment="Center" PositionYOffset="-4" Sprite="Encyclopedia\star_without_glow" Color="#FEC157FF" />

						<!--Space if not bookmarked-->
						<Widget IsHidden="@IsBookmarked" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="35" SuggestedHeight="35" HorizontalAlignment="Center" VerticalAlignment="Center" />

						<!--Highlighted Name-->
						<TextWidget IsVisible="@IsHighlighted" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" SuggestedWidth="500" MarginLeft="5" Brush="NameTitle.Highlight" Brush.FontSize="30" Brush.TextHorizontalAlignment="Left" Brush.TextVerticalAlignment="Center" Text="@Name"/>

						<!--Not Highlighted Name-->
						<TextWidget IsHidden="@IsHighlighted" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" SuggestedWidth="500" MarginLeft="5" Brush="EncyclopediaList.Filter.Name.Text" Brush.FontSize="30" Brush.TextHorizontalAlignment="Left" Brush.TextVerticalAlignment="Center" Text="@Name"/>
					</Children>
				</ListPanel>

			</Children>
		</ButtonWidget>
	</Window>
</Prefab>